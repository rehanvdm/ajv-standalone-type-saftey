{
  "$id": "Blog",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "site": {
      "type": "string"
    },
    "about": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "posts": {
      "type": "array",
      "items": {
        "$ref": "Post"
      }
    }
  },
  "required": [
    "site",
    "about",
    "email",
    "posts"
  ],
  "additionalProperties": false
}